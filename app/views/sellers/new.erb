<form id="new_sellers" method="post" action="/sellers/new" enctype="multipart/form-data">

  <% if @no_file_error%>
    <div class="row">
      <small class="error">
        <%= @no_file_error %>
      </small>
    </div>
  <% end %>
  <% if @seller && @seller.errors.any? %>    
    <% @seller.errors.full_messages.each do |message|%>
      <div class="row">
        <small class="error">
          <%= message%>
        </small>
      </div>
      <% end %>
  <% end %>

  <div class="row">
    <div class="small-12 columns">
      <label name="name">Name
        <input type="text" placeholder="Add Name Here" name="name" value="<%= @seller && @seller.name %>"/>
      </label>
    </div>
  </div>
   <div class="row">
    <div class="small-12 columns">
      <label name="location">Location
        <input type="text" placeholder="Add Name Here" name="location" value="<%= @seller && @seller.location %>"/>
      </label>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <label name="file">Image
        <input type="file" name="file" />
      </label>
    </div>
  </div>
  <div class="row"> 
   <div class="small-6 columns">
      <label name="blurb">Brief Intro
        <input type="text" placeholkkfder="Give us a breief introduction - MAX 140 characters" name="blurb" value="<%= @seller && @seller.blurb %>"/>
      </label>
    </div>
    <div class="small-6 columns">
      <label name="video">Video URL
        <input type="url" placeholder="Your video goes here.." name="video" value="<%= @seller && @seller.video%>"/>
      </label>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <label name="specialty">Specialty (What is your best skill?)
        <select name="specialty">
          <option value="Jewellery" selected="selected">Jewellery</option>
          <option value="Woodwork">Woodwork</option>
          <option value="Textile">Textile</option>
          <option value="Arts/Crafts">Arts/Crafts</option>
          <option value="Other">Other</option>
        </select>
      </label>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <label name="story">Story
        <textarea placeholder="Your story goes here" name="story"></textarea>
      </label>
    </div>
    <div class="row">
      <div class="small-6 small-offset-5"><button class="button success" id="sellers_submit" type="submit">Submit</button></div>
    </div>
  </div>
</form>
